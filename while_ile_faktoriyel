        static void Main(string[] args)
        {
            int sayi , faktoriyel ;
            Console.Write("Faktöriyeli Hesaplanacak Sayıyı Giriniz: ");
            sayi = Convert.ToInt32(Console.ReadLine());
            faktoriyel = 1;
            while (sayi>1)        
            {
                faktoriyel = faktoriyel * sayi;
                sayi--;
            }
            Console.WriteLine(faktoriyel);


        }
