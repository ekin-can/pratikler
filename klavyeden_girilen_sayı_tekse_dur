        static void Main(string[] args)
        {
            Console.Write("Bir Sayı Giriniz: ");
            int sayi;
            sayi=Convert.ToInt32(Console.ReadLine());

            while (sayi % 2 == 0)
            {
                Console.Write("Bir Sayı Giriniz: ");
                sayi = Convert.ToInt32(Console.ReadLine());
            }
           
            Console.WriteLine("Tek Sayı Girdiniz");
            
        }
