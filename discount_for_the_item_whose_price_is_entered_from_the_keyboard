static void Main(string[] args)
        {
            Console.ForegroundColor= ConsoleColor.Blue;
            Console.WriteLine("*****MEHMET ALÄ°'S BOOKSTORE*****");
            Console.WriteLine();
            Console.ForegroundColor= ConsoleColor.White;
            double x;
            double y;
            y = 1;
            Console.ForegroundColor = ConsoleColor.Yellow;
            Console.Write("Enter The Product Price:");
            
            x = Convert.ToDouble(Console.ReadLine());
            Console.WriteLine();
            if (0<x && x<=100 )
            {
                y = (x - (x * 10/100 ));
                Console.ForegroundColor = ConsoleColor.Blue;
                Console.WriteLine("Discounted Amount: " + y);
                Console.ForegroundColor = ConsoleColor.Yellow;
                //%10 discount
            }
            else if (x>100 && x<=150) 
            {
                y =(x - (x*15/100 ));
                Console.ForegroundColor = ConsoleColor.Blue;
                Console.WriteLine("Discounted Amount: " + y);
                Console.ForegroundColor = ConsoleColor.Yellow;
                //%15 discount
            }
            else if (x>150 && x<=200)
            {
                y =(x - (x* 20/100) );
                Console.ForegroundColor = ConsoleColor.Blue;
                Console.WriteLine("Discounted Amount: " + y);
                Console.ForegroundColor = ConsoleColor.Yellow;
                //%20 discount
            }
            Console.WriteLine();
